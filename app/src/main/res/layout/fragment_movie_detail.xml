<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context="com.popmovies.edison.popularmovies.MovieDetailFragment"
    tools:showIn="@layout/activity_movie_detail"
    android:orientation="vertical"
    android:id="@+id/details_layout">


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/details_title_frame">

        <TextView
            android:text="Title"
            android:id="@+id/details_movie_title"
            style="@style/details_movie_title" />
    </FrameLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView" >

        <TableLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/details_table_movie_info"
            android:columnCount="2">

            <TableRow
                style="@style/details_table_row"
                android:id="@+id/details_table_row_1">

                <ImageView
                    android:id="@+id/details_movie_poster"
                    android:adjustViewBounds="true"
                    style="@style/details_movie_property_element" />

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/details_movie_attributes"
                    style="@style/details_movie_property_element">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="YEAR"
                        android:id="@+id/details_movie_year" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="rating"
                        android:id="@+id/details_movie_rating" />
                </LinearLayout>
            </TableRow>
            <TableRow
                android:id="@+id/details_table_row_2"
                style="@style/details_table_row">

                <TextView
                    android:text="Overview"
                    android:id="@+id/details_movie_overview"
                    style="@style/details_movie_overview" />
            </TableRow>
        </TableLayout>
    </ScrollView>




</LinearLayout>
